{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}\\.vscode\\Build.ps1"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Sandbox",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}\\.vscode\\Sandbox.ps1"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Test Install",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}\\.vscode\\Install.ps1"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Test Uninstall",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}\\.vscode\\Uninstall.ps1"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "AppDeployToolkitHelp",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}\\Toolkit\\AppDeployToolkit\\AppDeployToolkitHelp.ps1"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"close": false
			}
		}
	]
}
